@{
    ViewBag.Title = "Customer Transactions";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var customer = ViewBag.Customer as OnlineBankingSystem.Models.Customer;
    var transactions = ViewBag.Transactions as List<OnlineBankingSystem.Models.Transaction>;
}

<h3>Customer: @customer.Full_Name</h3>

<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>Txn ID</th>
            <th>Date</th>
            <th>Type</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in transactions)
        {
            <tr style="color:@(t.Transaction_Type == "CREDIT" ? "green" : "red")">
                <td>@t.Transaction_Id</td>
                <td>@t.Transaction_Date</td>
                <td>@t.Transaction_Type</td>
                <td>@t.Amount</td>
            </tr>
        }
    </tbody>
</table>
